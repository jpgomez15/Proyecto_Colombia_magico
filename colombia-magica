                }
            };

            const timelineNav = document.getElementById('timeline-nav');
            const stepContentContainer = document.getElementById('step-content');

            function updateContent(stepId) {
                const stepData = steps[stepId];
                if (stepData) {
                    stepContentContainer.innerHTML = stepData.content;
                }
                
                Array.from(timelineNav.children).forEach(child => {
                    child.classList.remove('active-step');
                });
                document.getElementById(stepId).classList.add('active-step');
            }

            timelineNav.addEventListener('click', function(e) {
                const targetStep = e.target.closest('.timeline-item');
                if (targetStep) {
                    updateContent(targetStep.id);
                }
            });

            updateContent('step-1');

            const btnTeacher = document.getElementById('btn-rubric-teacher');
            const btnPeer = document.getElementById('btn-rubric-peer');
            const contentTeacher = document.getElementById('rubric-teacher-content');
            const contentPeer = document.getElementById('rubric-peer-content');

            btnTeacher.addEventListener('click', () => {
                contentTeacher.classList.remove('hidden');
                contentPeer.classList.add('hidden');
                btnTeacher.classList.add('text-teal-700', 'border-teal-700');
                btnTeacher.classList.remove('text-stone-500', 'border-transparent');
                btnPeer.classList.add('text-stone-500', 'border-transparent');
                btnPeer.classList.remove('text-teal-700', 'border-teal-700');
            });

            btnPeer.addEventListener('click', () => {
                contentPeer.classList.remove('hidden');
                contentTeacher.classList.add('hidden');
                btnPeer.classList.add('text-teal-700', 'border-teal-700');
                btnPeer.classList.remove('text-stone-500', 'border-transparent');
                btnTeacher.classList.add('text-stone-500', 'border-transparent');
                btnTeacher.classList.remove('text-teal-700', 'border-teal-700');
            });

            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
</body>
</html>
